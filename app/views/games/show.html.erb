<br>
<div class="col-xs-10 col-xs-offset-1">
	<h1><%= @game.name %></h1>
	<div class="chessboard">
		<% 4.times do |alternate_rows| %>
		<div class="row">
			<% 4.times do |alternate_squares| %>
				<div class="white"></div>
				<div class="black"></div>
			<% end %>
		</div>
		<div class="row">
			<% 4.times do |alternate_squares| %>
				<div class="black"></div>
				<div class="white"></div>
			<% end %>
		</div>
		<% end %>
	</div>
</div>